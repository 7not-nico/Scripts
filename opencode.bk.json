{
  "$schema": "https://opencode.ai/config.json",
  "mcp": {
    "playwright": {
      "type": "local",
      "command": [
        "bunx",
        "@playwright/mcp@latest"
      ],
      "enabled": false
    },
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
      "enabled": true
    },
    "gh_grep": {
      "type": "remote",
      "url": "https://mcp.grep.app",
      "enabled": true
    },
    "readability": {
      "type": "local",
      "command": [
        "bunx",
        "-y",
        "@tinkergrove/mozilla-readability-mcp-server"
      ],
      "enabled": false
    },
    "exa": {
      "type": "remote",
      "url": "https://mcp.exa.ai/mcp?tools=web_search_exa,get_code_context_exa,crawling_exa,company_research_exa,linkedin_search_exa,deep_researcher_start,deep_researcher_check",
      "enabled": true
    },
    "deepwiki": {
      "type": "remote",
      "url": "https://mcp.deepwiki.com/sse",
      "enabled": true
    },
    "sequential-thinking": {
      "type": "local",
      "command": [
        "bunx",
        "-y",
        "@modelcontextprotocol/server-sequential-thinking"
      ],
      "enabled": true
    },
    "e2b": {
      "type": "local",
      "command": [
        "bunx",
        "-y",
        "@e2b/mcp-server@latest"
      ],
      "environment": {
        "E2B_API_KEY": "{env:E2B_API_KEY}"
      },
      "enabled": false
    },
    "git": {
      "type": "stdio",
      "command": "uvx",
      "args": [
        "mcp-server-git"
      ],
      "enabled": true
    },
    "git-ingest": {
      "type": "stdio",
      "command": "uvx",
      "args": [
        "--from",
        "git+https://github.com/adhikasp/mcp-git-ingest",
        "mcp-git-ingest"
      ],
      "environment": {
        "GITHUB_TOKEN": "{env:GITHUB_TOKEN}"
      },
      "enabled": true
    },
    "github": {
      "type": "remote",
      "url": "https://api.githubcopilot.com/mcp/",
      "enabled": true
    }
  },
  "tools": {
    "playwright": true,
    "context7": true,
    "gh_grep": true,
    "readability": true,
    "exa": true,
    "deepwiki": true,
    "sequential-thinking": true,
    "e2b": true,
    "git": true,
    "git-ingest": true,
    "github": true
  },
  "agent": {
    "plan": {
      "tools": {
        "context7": true,
        "gh_grep": true,
        "readability": true,
        "exa": true,
        "deepwiki": true,
        "sequential-thinking": true,
        "e2b": true,
        "git": true,
        "git-ingest": true,
        "github": true
      }
    },
    "build": {
      "tools": {
        "context7": true,
        "gh_grep": true,
        "readability": true,
        "exa": true,
        "deepwiki": true,
        "sequential-thinking": true,
        "e2b": true,
        "git": true,
        "git-ingest": true,
        "github": true
      }
    }
  }
}
